#include <stdio.h>

int main() {
    int number, sum = 0, digit;

    // Get input from the user
    printf("Enter a number: ");
    scanf("%d", &number);

    // Use a loop to sum the digits
    while (number != 0) {
        digit = number % 10;  
        sum += digit;       
        number /= 10;      
    }

    // Output the result
    printf("The sum of the digits is: %d\n", sum);

    return 0;
}
